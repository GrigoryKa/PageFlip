<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PageFlip.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:PageFlip.Views"
		xmlns:local="clr-namespace:PageFlip.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="PageFlip.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="{Binding PageFlipTitle}" Height="{Binding WinHeight}" Width="{Binding WinWidth}"
		MinHeight="{Binding MinWinHeight}" MinWidth="{Binding MinWinWidth}"
		MaxHeight="{Binding MaxWinHeight}" MaxWidth="{Binding MaxWinWidth}"
		>
	<Window.DataTemplates>
		<DataTemplate DataType="{x:Type vm:MainViewModel}">
			<views:MainView/>
		</DataTemplate>
		<DataTemplate DataType="{x:Type vm:CanvasBasedViewModel}">
			<views:CanvasBasedView/>
		</DataTemplate>
	</Window.DataTemplates>

	<DockPanel>
		<StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8" Spacing="6">
			<Button Content="←" Command="{Binding BackCommand}" Width="40"/>
			<TextBlock Padding="8 0 0 0" Margin="8,0,0,0" Text="{Binding SelectedApproach}" />
			<Button Content="→" Command="{Binding ForwardCommand}" Width="40"/>
			<Button Content="Выберите папку" Command="{Binding PickFolderCommand}" Margin="8,0,0,0"/>
			<TextBlock Text="{Binding FolderPath}" Width="300"  Padding="0 10 0 0" Margin="8,0,0,0"/>
		</StackPanel>

		<ContentControl Content="{Binding CurrentViewModel}" />
	</DockPanel>
</Window>
